<?xml version='1.0' encoding='utf-8'?>
<widget id="com.evothings.blewifisetup" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WiFi Setup</name>
    <description>
        WiFi setup helper.
    </description>
    <author email="chrisvip@hotmail.com" href="http://cordova.io">
        Chris Imani
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-ble" spec="~2.0.1" />
    <engine name="android" spec="^7.0.0" />
</widget>
